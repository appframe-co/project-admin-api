{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./build",
      "esModuleInterop": true,
      "typeRoots": ["./node_modules/@types", "./src/types"], 
      "types": ["node", "express"],
      "strict": true,
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src"]
  }